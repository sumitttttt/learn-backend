<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
      <a class="text-blue-500 flex mb-5" href="/">Go Back To Home</a>
      <hl class="text-3xl tracking-tighter mb-3">All Users</hl>
      <div class="users flex gap-3 flex-wrap mt-2">
        <% users.forEach(function(user){ %>
        <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-72 w-full h-72 rounded-lg bg-zinc-700 overflow-hidden">
            <img
              class="w-full h-full object-cover"
              src="<%=user.image%>"
              alt=":-("
            />
          </div>
          <h3 class="text-xl tracking-tighter mt-3"><%=user.name%></h3>
          <h5 class="text-zinc-500"><%=user.email%></h5>
          <div class="w-72 flex gap-3 mt-10">
            <a class="text-zinc-200" href="/edit/<%=user._id%>">Edit User</a>
            <a class="text-red-500" href="/delete/<%=user._id%>">Delete User</a>
          </div>
        </div>
        <% })%>
      </div>
    </div>
  </body>
</html>
